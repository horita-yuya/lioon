{
  "name": "@lioon/core",
  "version": "1.2.0",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "package.json", "src"],
  "scripts": {
    "build": "tsup src/index.ts src/plugin/index.ts --format esm --dts && tsup src/index.ts src/plugin/index.ts --format cjs",
    "watch": "tsup src/index.ts src/plugin/index.ts --watch --format esm --dts",
    "test": "vitest run"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    },
    "./plugin": {
      "import": "./dist/plugin/index.js",
      "types": "./dist/plugin/index.d.ts",
      "require": "./dist/plugin/index.cjs"
    }
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "~5.7.2",
    "vitest": "^3.0.8"
  },
  "peerDependencies": {
    "acorn": "^8.14.1",
    "acorn-walk": "^8.3.4"
  },
  "description": "Core library for Lioon internationalization",
  "keywords": ["i18n", "internationalization", "localization", "typescript"],
  "repository": {
    "type": "git",
    "url": "https://github.com/horita-yuya/lioon.git",
    "directory": "packages/lioon-core"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
