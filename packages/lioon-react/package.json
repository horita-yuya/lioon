{
  "name": "@lioon/react",
  "version": "1.4.0",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "package.json", "src"],
  "scripts": {
    "build:i18n": "tsup src/index.ts src/vite/index.ts --format esm --dts",
    "build": "tsup src/index.ts src/vite/index.ts --format esm --dts",
    "watch": "tsup src/index.ts src/vite/index.ts --watch --format esm --dts",
    "test": "vitest run"
  },
  "dependencies": {
    "@lioon/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.1.3",
    "react": "19.1.0",
    "next": "^15.3.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js",
      "require": "./dist/vite/index.js"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "import": "./dist/next/index.js",
      "require": "./dist/next/index.js"
    },
    "./next/loader": {
      "types": "./dist/next/loader.d.ts",
      "import": "./dist/next/loader.js",
      "require": "./dist/next/loader.cjs"
    }
  },
  "description": "React bindings for Lioon internationalization",
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "react",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/horita-yuya/lioon.git",
    "directory": "packages/lioon-react"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
